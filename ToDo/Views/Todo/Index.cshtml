@model ToDo.Models.ToDoItems_Model_View

@using Humanizer
@{
    ViewData["Title"] = "Manage your Task";
}


<div class="panel panel-default todo-panel">


  <ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="ToDo">To-Do</a>
  </li>
  <li class="nav-item">
    <a class="nav-link"  asp-action="Completed" asp-controller="ToDo">Completed tasks </a>
  </li>
</ul>
  <div class="panel-heading">@ViewData["Title"]</div>
  <table class="table table-hover">
      <thead>
          <tr>
              
              <td>Item</td>
              <td>Due</td>
              <td>Registry time</td>
             
          </tr>
      </thead>

      @foreach (var item in Model.toDoItems)
      {
          
          
         
         <tr>
             <form asp-action="MarkDone" method="POST" asp-controller="ToDo">
             
             
              <td>@item.title</td>
              <td>@item.dueAt.Humanize()</td>
              <td>@item.createdAt</td>
              <td>
               <td>
               <button type="submit" class="btn btn-primary" >Completed</button>
               <input type="hidden" name="id" value="@item.id">
         </td>
        </form>
               
          </tr>
         
        
        

      }
  </table>
 </div>
  <div class="panel-footer add-item-form">
  @await Html.PartialAsync("AddItemPartial", new ToDoItem())
</div>

